package hw3;


import java.util.ArrayList;

/**
 * Created by tsv on 31.01.15.
 */
public class MyArrayList extends Thread {
    static volatile boolean boo;

    public void parallelIndexOf(final ArrayList<Integer> array, int numb) {
        left(array, numb);
        right(array, numb);
    }

    public void left(final ArrayList<Integer> array, final int numb){
        new Thread() {
            public void run(){
                leftLinearFinding(array,numb);
            }
        }.start();
    }

    public static boolean leftLinearFinding(final ArrayList<Integer> array, final int numb){
        for(int i = 0; i< (array.size()/2);i++){
            if(array.get(i) == numb){
                System.out.println("value has been fount in left side" + array.get(i));
                return true;
            }
        }
        return false;
    }

    public static boolean right(final ArrayList<Integer> array, int numb){
        for(int i = array.size()/2; i<array.size();i++){
            if(array.get(i) == numb){
                System.out.println("value has been fount in right side" + array.get(i));
                return true;
                //System.out.println("Value have been found in RIGHT part of array:" + array.get(i));
            }
        }
        return false;
    }
}